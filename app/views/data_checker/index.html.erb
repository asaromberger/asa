<h1><%= @title %></h1>

<ul>
<% @tables.each do |name, table| %>
	<li><b><%= name %></b> (<%= table['ids'].count %>)</li>
	<ul>
		<% table['errors'].each do |error| %>
			<% if error.match('^References:') || error.match('^pkey:') %>
				<li><%= error %></li>
			<% else %>
				<li style='background-color: #ffff00'><%= error %></li>
			<% end %>
		<% end %>
	</ul>
<% end %>
</ul>

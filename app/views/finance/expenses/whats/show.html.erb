<h1><%= @title %></h1>

<p><%= link_to 'Back', :back, class: 'btn btn-xs btn-primary' %></p>

<table>

<thead>
<tr>
<th>Date</th>
<th>+/-</th>
<th>Check</th>
<th>Amount</th>
</tr>
</thead>

<tbody>
<% @items.each do |item| %>
	<tr>
	<td><%= item.date %></td>
	<td><%= item.pm %></td>
	<td><%= item.checkno %></td>
	<td><%= number_with_precision(item.amount, precision: 2) %></td>
	</tr>
<% end %>
</tbody>

</table>

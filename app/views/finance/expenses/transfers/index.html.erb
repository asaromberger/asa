<h1><%= @title %></h1>

<table class='table-bordered table-striped fixed-header'>

<thead>
<tr>
<th>Date</th>
<th>+/-</th>
<th>What</th>
<th>Amount</th>
<th>Type</th>
<th>Category</th>
<th>Subcat</th>
</tr>
</thead>

<tbody>
<% @transfers.each do |id, values| %>
	<tr>
	<td><%= values['date'] %></td>
	<td><%= values['pm'] %></td>
	<td><%= values['what'] %></td>
	<td><%= number_with_precision(values['amount'], precision: 2) %></td>
	<td><%= values['type'] %></td>
	<td><%= values['category'] %></td>
	<td><%= values['subcategory'] %></td>
	</tr>
<% end %>
</tbody>

</table>

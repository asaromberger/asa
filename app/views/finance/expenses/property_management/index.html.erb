<h1><%= @title %></h1>

<table class='table-bordered table-striped fixed-header'>

<thead>
	<tr>
	<th>Date</th>
	<th>PM</th>
	<th>What</th>
	<th>Amount</th>
	</tr>
</thead>

<tbody>
	<% @items.each do |item| %>
		<tr>
		<td><%= item.date %></td>
		<td><%= item.pm %></td>
		<td><%= item.finance_expenses_what.what %></td>
		<td align='right'><%= number_with_precision(item.amount, precision:2) %></td>
		</tr>
	<% end %>
</tbody>
</table>

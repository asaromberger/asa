<%= form_for(@account, url: url, html: {method: method}) do |form| %>

	<%= hidden_field_tag :status, @status %>

	<%= form.label :account, class: 'col-md-2' %>
	<%= form.text_field :account, class: 'col-md-10' %>

	<div class='clearfix'></div>

	<%= form.label 'Type', class: 'col-md-2' %>
	<%= form.select :atype, @atypes, class: 'col-md-10' %>

	<div class='clearfix'></div>

	<%= form.submit "#{type} Account", class: 'btn btn-primary col-md-3' %>
<% end %>


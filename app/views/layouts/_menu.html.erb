			</button>
		</div>

		<div class='collapse navbar-collapse' id='menu-toggle-nav'>
			<ul class="nav navbar-nav pull-right">

			<% if signed_in? && current_user_role('siteadmin') %>
				<%= render 'layouts/menu_siteadmin' %>
			<% end %>

			<% if signed_in? && current_user.application == 'health' %>
				<%= render 'layouts/menu_health' %>
			<% end %>

			<% if signed_in? && current_user.application == 'bridge' %>
				<%= render 'layouts/menu_bridge' %>
			<% end %>

			<% if signed_in? %>
				<%= render 'layouts/menu_user' %>

<nav class="navbar navbar-default">
	<meta name="viewport" content="width=device-width, initial-scale=1"/>
	<div class="container">

		<% if signed_in? %>
			<% if ! current_user.application.blank? %>
				<p id='logo'><img src="/assets/Asa1980.jpg" alt="Asa" class='logo' style="height:1.7em"/>&nbsp;<img src="/assets/Asa2023.jpg" alt="Asa" class='logo' style="height:1.7em"/>&nbsp;&nbsp;<%= current_user.application.upcase %></p>
			<% else %>
				<p id='logo'><img src="/assets/Asa1980.jpg" alt="Asa" class='logo' style="height:1.7em"/>&nbsp;<img src="/assets/Asa2023.jpg" alt="Asa" class='logo' style="height:1.7em"/></p>
			<% end %>
		<% else %>
			<p id='logo'><img src="/assets/Asa.jpg" alt="Asa" class='logo' style="height:1.7em"/>&nbsp;&nbsp;&nbsp;User</p>
		<% end %>

		<div class='navbar-header'>
			<button type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#menu-toggle-nav' aria-expanded='false'>
				<span class='sr-only'>Toggle navigation</span>
				<span class='icon-bar'></span>
				<span class='icon-bar'></span>
				<span class='icon-bar'></span>
			</button>
		</div>

		<div class='collapse navbar-collapse' id='menu-toggle-nav'>
			<ul class="nav navbar-nav pull-right">

			<%# SITE ADMIN %>
			<% if signed_in? && current_user_role('siteadmin') %>
				<%= render 'layouts/menu_siteadmin' %>
			<% end %>

			<%# HEALTH %>
			<% if signed_in? && current_user.application == 'health' %>
				<%= render 'layouts/menu_health' %>
			<% end %>

			<%# BRIDGE %>
			<% if signed_in? && current_user.application == 'bridge' %>
				<%= render 'layouts/menu_bridge' %>
			<% end %>

			<%# MUSIC %>
			<% if signed_in? && current_user.application == 'music' %>
				<%= render 'layouts/menu_music' %>
			<% end %>

			<%# GENEALOGY %>
			<% if signed_in? && current_user.application == 'genealogy' && current_user_role('genealogy_admin') %>
				<%= render 'layouts/menu_genealogy_admin' %>
			<% end %>

			<% if signed_in? && current_user.application == 'genealogy' && current_user_role('genealogy') %>
				<%= render 'layouts/menu_genealogy' %>
			<% end %>

			<%# FINANCE %>
			<% if signed_in? && current_user.application == 'finance' && current_user_role('finance_admin') %>
				<%= render 'layouts/menu_finance_admin' %>
			<% end %>

			<% if signed_in? && current_user.application == 'finance' && current_user_role('finance_payments') %>
				<%= render 'layouts/menu_finance_payments' %>
			<% end %>

			<% if signed_in? && current_user.application == 'finance' && current_user_role('finance_investments') %>
				<%= render 'layouts/menu_finance_investments' %>
			<% end %>

			<% if signed_in? && current_user.application == 'finance' && current_user_role('finance_expenses') %>
				<%= render 'layouts/menu_finance_expenses' %>
			<% end %>

			<%# USER %>
			<% if signed_in? %>
				<%= render 'layouts/menu_user' %>
			<% else %>
				<li><%= link_to "Sign in", new_session_path %></li>
			<% end %>

			</ul>
		</div>
	</div>
</nav>

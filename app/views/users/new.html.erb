<div class="row">
  <div class="col-md-12 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :email, "Email Address<span class='hilite-required-field'>*</span>".html_safe, class: 'col-md-2' %>
      <%= f.text_field :email, :required => true, class: 'col-md-4' %>

      <div class='clearfix'><p>&nbsp;</p></div>

      <%= f.label :password, "Password<span class='hilite-required-field'>*</span>".html_safe, class: 'col-md-2' %>
      <%= f.password_field :password, :required => true, class: 'col-md-2' %>

      <%= f.label :password_confirmation, "Confirm password<span class='hilite-required-field'>*</span>".html_safe, class: 'col-md-2' %>
      <%= f.password_field :password_confirmation, :required => true, class: 'col-md-2' %>

      <div class='clearfix'></div>

      <%= f.submit "Create", class: "btn btn-lg btn-primary col-xs-12 col-sm-9 col-md-7 col-lg-6" %>

    <% end %>
  
  </div>
</div>

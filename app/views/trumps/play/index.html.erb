<h1><%= @title %></h1>

<% if @alerts.count > 0 %>
<p>A yellow Cards indicates Made does not total to Cards</p>
<% end %>

<p><%= link_to "Next Hand", new_trumps_play_path(game: @gameid) %></p>

<table class='table-bordered table-striped fixed-header'>

<thead>
<tr>
<th>Round</th>
<th>Cards</th>
<% @names.each do |id, name| %>
	<th colspan=3 class='center'><%= name %></th>
<% end %>
<th>Edit</th>
</tr>
<tr>
<th></th>
<th></th>
<% @names.each do |id, name| %>
	<th>Bid</th>
	<th>Made</th>
	<th>Score</th>
<% end %>
<th></th>
</tr>
</thead>

<tbody>
<% @scores.each do |round, values| %>
	<tr>
	<td><%= round %></td>
	<% if @alerts[round] %>
		<td class='boldrightborder hilite-background-warning'><%= values['cards'] %></td>
	<% else %>
		<td class='boldrightborder'><%= values['cards'] %></td>
	<% end %>
	<% @names.each do |id, name| %>
		<td><%= values[id]['bid'] %></td>
		<td><%= values[id]['made'] %></td>
		<td class='boldrightborder'><%= values[id]['score'] %></td>
	<% end %>
	<td><%= link_to 'Edit', edit_trumps_play_path(game: @gameid, id: round) %></td>
	</tr>
<% end %>
</tbody>

</table>

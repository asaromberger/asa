	<td><%= link_to 'Edit', edit_genealogy_married_path(id: id), class: 'btn btn-primary btn-xs' %></td>
	<td><%= link_to 'Remove', genealogy_married_path(id: id), method: :delete, data: { confirm: "Remove #{name}?" }, class: 'btn btn-primary btn-xs' %></td>
	</tr>
<% end %>
</table>
</div>

<h4>Children</h4>

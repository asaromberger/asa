<h1><%= @title %></h1>

<%= form_tag genealogy_marrieds_path, method: :post do %>

	<%= hidden_field_tag :individual_id, @individual.id %>

	<div class="field">
		<%= label_tag :spouse_id, 'Spouse', class: 'col-md-1' %>
		<%= select_tag :spouse_id, options_for_select(@spouses), class: 'col-md-6' %>
	</div>

	<div class='clearfix'><p>&nbsp;</p></div>

	<div class="actions">
		<%= submit_tag "Save", class: 'col-md-2 btn btn-primary' %>
	</div>
<% end %>

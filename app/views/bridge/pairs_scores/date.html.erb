<h1><%= @title %></h1>

<p><%= link_to "Back to Pairs Scores", bridge_pairs_scores_path(start_date: @start_date, end_date: @end_date), class: 'btn btn-primary btn-xs' %></p>

<p><%= link_to "Edit Scores", new_bridge_score_path(date: @date, start_date: @start_date, end_date: @end_date), class: 'btn btn-primary btn-xs' %></p>


<table class='table-bordered table-striped'>

<thead>
<tr>
<th>Team</th>
<th>Score</th>
<th>Percent</th>
</tr>
</thead>

<tbody>
<% @scores.each do |name, values| %>
	<tr>
	<td><%= name %></td>
	<td><%= values['score'] %></td>
	<td><%= percent_fmt(values['percent']) %></td>
	</tr>
<% end %>

<tr>
<td>&nbsp;</td>
</tr>
<tr>
<td>Teams</td>
<td><%= @bottom['players'] %></td>
</tr>
<tr>
<td>Score</td>
<td><%= number_with_precision(@bottom['score'], precision: 2) %></td>
</tr>

</tbody>

</table>

<h1><%= @title %></h1>

<table>

<thead>
<tr>
<th>Date</th>
<th>Record Count</th>
<th>Display</th>
<th>Remove</th>
</tr>
</thead>

<tbody>
<% @results.each do |date, count| %>
	<tr>
	<td><%= date %></td>
	<td class='center'><%= count %></td>
	<td><%= link_to 'Display', bridge_cleanup_path(id: date), method: :get, class: 'btn btn-primary btn-xs' %></td>
	<td><%= link_to 'Remove', bridge_cleanup_path(id: date), method: :delete, data: {confirm: "Remove #{date}: #{count} records?" }, class: 'btn btn-primary btn-xs' %></td>
	</tr>
<% end %>
</tbody>

</table>

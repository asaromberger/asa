<%= form_for(@score, url: url, html: {method: method}) do |form| %>

	<%= hidden_field_tag :type, @type %>

	<%= form.label :date, class: 'col-md-2' %>
	<%= form.date_select :date, {}, {class: 'col-md-2'} %>

	<div class='clearfix'><p>&nbsp;</p></div>

	<%= form.label :bridge_bbo_type_id, class: 'col-md-2' %>
	<%= form.select :bridge_bbo_type_id, @types.collect {|type| [type.btype, type.id]}, {}, class: 'col-md-2' %>

	<div class='clearfix'><p>&nbsp;</p></div>

	<%= form.label :bbo_id, class: 'col-md-2' %>
	<%= form.text_field :bbo_id, class: 'col-md-2' %>

	<div class='clearfix'><p>&nbsp;</p></div>

	<%= form.label :score, class: 'col-md-2' %>
	<%= form.number_field :score, class: 'col-md-2', step: 0.01 %>

	<div class='clearfix'><p>&nbsp;</p></div>

	<%= form.label :rank, class: 'col-md-2' %>
	<%= form.number_field :rank, class: 'col-md-2' %>

	<div class='clearfix'><p>&nbsp;</p></div>

	<%= form.label :points, class: 'col-md-2' %>
	<%= form.number_field :points, class: 'col-md-2', step: 0.01 %>

	<div class='clearfix'><p>&nbsp;</p></div>

	<%= form.submit type, class: 'btn btn-primary col-md-3' %>

<% end %>
